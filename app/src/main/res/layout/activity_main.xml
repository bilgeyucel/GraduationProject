<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#473448"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/startView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="5"
        android:padding="10dp"
        android:text="WELCOME TO THE SUDOKU SOLVER!\n \n Please take a photo first"
        android:gravity="center"
        android:textColor="@color/colorPurpleButton"
        android:textSize="24sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <Button
            android:id="@+id/take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="#ABA2A7"
            android:padding="2dp"
            android:text="Take Photo!"
            android:textColor="#C70039" />

        <Button
            android:id="@+id/print_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="#ABA2A7"
            android:padding="5dp"
            android:text="@string/print_name"
            android:textColor="#C70039" />

    </LinearLayout>

</LinearLayout>